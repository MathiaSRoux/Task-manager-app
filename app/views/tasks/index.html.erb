<header>
  <h1>My tasks</h1>
  <%= link_to '+' + 'New task', new_task_path, class: 'create--link' %>
</header>

<section>
  <ul class="item--list">
    <% @tasks.each do |key, value| %>
      <%= key.to_date %>
      <li class="item">
        <% value.each do |task|%>
          <% if task.completed %>
            <%= link_to task.title, task_path(task), class: 'item--checked'%>
          <% else %>
            <%= link_to task.title, task_path(task)%>
          <% end %>
        
          <%= link_to 'x', task_path(task), method: :delete, data: { confirm: "Are you sure?", class: 'delete--link' }%>
        <%end%>
      </li>
    <% end %>
  </ul>
</section>
