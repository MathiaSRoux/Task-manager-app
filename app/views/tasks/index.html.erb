<header>
  <h1>My tasks</h1>
  <%= link_to '+' + 'New task', new_task_path, class: 'create--link' %>
</header>

<section>
  <ul class="item--list">
    <% @tasks.each do |task| %>
      <li class="item">
        <%= task.created_at.to_date %>
        <% if task.completed %>
          <%= link_to task.title, task_path(task), class: 'item--checked'%>
        <% else %>
          <%= link_to task.title, task_path(task)%>
        <% end %>
        
        <%= link_to 'x', task_path(task), method: :delete, data: { confirm: "Are you sure?", class: 'delete--link' }%>
      </li>
    <% end %>
  </ul>
</section>
